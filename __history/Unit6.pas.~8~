procedure TForm6.printtree3foraddnode;
begin
    tree6.Depth(tree6, countdepth);
    lvly:= Form6Image1.Width div (countdepth+1)-30;
    Form6Image1.Canvas.Brush.Color:=clGradientActiveCaption;
    Form6Image1.Canvas.FillRect(rect(0,0,Form6.Form6Image1.Width,Form6Image1.height));
    tree6.WritelnTreeforForm5(tree3,0,Form6Image1.Width,20,1, Canvas);
end;

