procedure TForm2.MainMenuClick(Sender: TObject);
begin
    Form2.Hide;
    MainForm.Show;
end;

procedure TForm2.NextForm2Click(Sender: TObject);
begin
  case nform of
    1: begin
      nform := 2;
      Form2.NameLb.Caption := 'Высота бинарного дерева поиска';
      Form2.Image1.Picture.LoadFromFile('D:/Учеба/2 курс/4 семестр/ПРАКТИКИ/летняя/Delphi проект/Картинки/Теория2.bmp');
