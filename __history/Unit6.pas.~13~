unit Unit6;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.Buttons, Vcl.ExtCtrls;

type
  TForm6 = class(TForm)
    BBMainMenuForm6: TBitBtn;
    LbName: TLabel;
    Label1: TLabel;
    Form6Image1: TImage;
    Label2: TLabel;
    Edit1: TEdit;
    procedure BBMainMenuForm6Click(Sender: TObject);
    procedure printtree3foraddnode;
    procedure AddTree;
    procedure NumberForm6 (nform6 : integer);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form6: TForm6;

implementation

{$R *.dfm}

uses Unit1;

procedure TForm6.BBMainMenuForm6Click(Sender: TObject);
begin
    Form6.Hide;
    MainForm.Show;
end;

procedure TForm6.NumberForm6 (nform6 : integer);
begin
    case nform6 of
     3: begin
        AddTree;
     end;
    end;
end;

procedure TForm6.AddTree;
begin
    tree6 := TSortTree.Create(16);
    tree6.AddNode(8, tree6);
    tree6.AddNode(4, tree6);
    tree6.AddNode(6, tree6);
    tree6.AddNode(2, tree6);
    tree6.AddNode(1, tree6);
    tree6.AddNode(3, tree6);
    tree6.AddNode(5, tree6);
    tree6.AddNode(7, tree6);
    tree6.AddNode(12, tree6);
    tree6.AddNode(10, tree6);
    tree6.AddNode(9, tree6);
    tree6.AddNode(11, tree6);
    tree6.AddNode(24, tree6);
    tree6.AddNode(20, tree6);
    tree6.AddNode(17, tree6);
    tree6.AddNode(19, tree6);
    tree6.AddNode(22, tree6);
    tree6.AddNode(23, tree6);
    tree6.AddNode(27, tree6);
    tree6.AddNode(30, tree6);

    printtree3foraddnode;
end;

procedure TForm6.printtree3foraddnode;
begin
    tree6.Depth(tree6,countdepth);
    Form6Image1.Canvas.Brush.Color:=clGradientActiveCaption;
    Form6Image1.Canvas.FillRect(rect(0,0,Form6Image1.Width,Form6Image1.Height));
    tree6.WritelnTreeforForm5(tree6,0,Form6Image1.Width,20,1, Form6Image1.Canvas);
end;

end.
